# Токен Telegram бота
BOT_TOKEN=your_telegram_bot_token

# ID группы для отправки сообщений о дивергенциях
NOTIFICATION_GROUP_ID=-100your_group_id

# Данные для подключения к PostgreSQL
DB_USER=postgres
DB_PASS=postgres
DB_HOST=db
DB_PORT=5432
DB_NAME=crypto_divergence_bot

# API ключи Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# Список ID суперадминов (через запятую)
SUPERADMIN_IDS=123456789,987654321

# Интервал проверки дивергенции (в секундах)
CHECK_INTERVAL=300

# Порог дивергенции по умолчанию (в процентах)
DEFAULT_DIVERGENCE_THRESHOLD=5.0